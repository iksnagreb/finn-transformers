{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Energy Consumption Over Time (mW)",
  "data": {
    "values": "<DVC_METRIC_DATA>"
  },
  "transform": [
    {
      "filter": "datum.batch_size === 1"
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "timestamp",
          "type": "temporal",
          "title": "Timestamp"
        },
        "y": {
          "aggregate": "sum",
          "field": "value",
          "type": "quantitative",
          "title": "Power (mW)"
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "scale": {
            "domain": ["vdd_gpu_soc_average", "vdd_cpu_cv_average", "vin_sys_5v0_average"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
          },
          "title": "Energy Source"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.bar_start_end === true"
        }
      ],
      "mark": {
        "type": "rule",
        "color": "black",
        "size": 10
      },
      "encoding": {
        "x": {
          "field": "timestamp",
          "type": "temporal"
        },
        "y": {
          "value": 0
        },
        "y2": {
          "value": 1
        }
      }
    }
  ]
}
